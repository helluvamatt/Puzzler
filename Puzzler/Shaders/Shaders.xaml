<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Puzzler.Shaders"
					xmlns:m="clr-namespace:Puzzler.Models">
	<x:Array x:Key="shaders" Type="{x:Type m:TypeDescriptor}">
		<m:TypeDescriptor Description="Color Wheel" Type="{x:Type local:ColorWheelGradientShader}" />
		<m:TypeDescriptor Description="Random Spheres" Type="{x:Type local:RandomSpheresShader}" />
	</x:Array>
</ResourceDictionary>